@model IEnumerable<Internet_Programing.Models.OS>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@{
    if (ViewData["message"] != "")
    {
        <p style="color:@ViewData["color"]">@ViewData["message"]!</p>
    }
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Version)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Version)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OSId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OSId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OSId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
